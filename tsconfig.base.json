{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "lib": [
      "ESNEXT",
      "DOM"
    ],
    // errors in @ethereumjs/devp2p
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "#app/*": [
        "src/*"
      ],
      "#handlers/*": [
        "src/handlers/*"
      ]
    }
  }
}